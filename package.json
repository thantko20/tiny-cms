{
  "name": "tinycms",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:client": "vite",
    "build:client": "vite build",
    "dev:server": "tsx watch --tsconfig ./tsconfig.server.json ./src/index.ts",
    "build:server": "tsc --project tsconfig.server.json && copyfiles --flat src/public/* dist/public",
    "build": "npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "concurrently --kill-others \"npm run dev:client\" \"npm run dev:server\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.4.3",
    "@tanstack/router-devtools": "^1.4.3",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
